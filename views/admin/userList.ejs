
    <%-  include("partials/header-datatable")  %>
    
    <style>
      .image-thumbnail{
        height: 80px;
        width: 80px;
      }
    </style>
  
      <!-- Content Header (Page header) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">Lista de Usuários</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active">Lista de Usuários</li>
              </ol>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->
  
      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <!-- Small boxes (Stat box) -->
          <div class="row">
            <div class="col-md-12">
            <div class="card card-dark">
              <div class="card-header">
                <h3 class="card-title">Lista de Usuários</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                  <table id="tbl-list-category" class="table table-bordered table-striped">
                      <thead>
                      <tr>
                        <th>Foto</th>
                        <th>Nome</th>
                        <th>E-mail</th>
                        <th>Telemóvel</th>
                        <th>Departamento</th>
                        <th>Data de Admissão</th>
                        <th>Tempo de Casa</th>
                        <th>Status</th>
                        <th>Acões</tr>
                      </tr>
                      </thead>
                      <tbody>
                            <% users.forEach(function(user){ %>
                          <tr>
                            <td>
                              <a href="<%= user.image %>" target="_blank"><img class="image-thumbnail" src="<%= user.image %>" alt=""></a>
                                
                            </td>
                            <td>
                                <%= user.name  %>
                              </td>
                            
                             <td>
                                <%= user.email  %>
                            </td>
                            <td>
                                <%= user.mobile  %>
                            </td>
                            <td>
                              <%= user.section.name  %>
                            </td>

                            <td>
                              <%= moment(user.date_hired).format("DD/MM/YY")  %>
                            </td>
                            <td>
                              <%= moment(user.date_hired).startOf('day').fromNow();  %>
                            </td>
                            <td>
                              <% if(user.status == '1'){ %>
                                  <button class="btn btn-success">Ativo</button>
                                <% }else{ %>
                                  <button class="btn btn-danger">Inativo</button>
                                <% } %>
                            </td>
                            <td>
                              <a href="/admin/user-edit/<%= user.id %>" class="btn btn-info"><i class="fa fa-edit"></i>Editar</a>
                              
                              <form method="post" action="/admin/user-delete" id="frm-delete-book-<%= user.id %>" style="display: inline;">
                                <input type="hidden" value="<%= user.id %>" name="user_id">
                              </form>
                              <a href="javascript:void(0)" onclick="if( confirm('Are you sure?')){ $('#frm-delete-book-<%= user.id %>').submit() }" class="btn btn-danger"><i class="fa fa-trash"></i>Deletar</a>
                            </td>
                          </tr>
                         <% }) %>
                      </tbody>
                      <tfoot>
                          <tr>
                            <th>Foto</th>
                            <th>Nome</th>
                            <th>E-mail</th>
                            <th>Telemóvel</th>
                            <th>Departamento</th>
                            <th>Data de Admissão</th>
                            <th>Tempo de Casa</th>
                            <th>Status</th>
                            <th>Acões</tr>
                            </tr>
                      </tfoot>
                    </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>
          </div>
          <!-- /.row -->
        </div><!-- /.container-fluid -->
      </section>
      <!-- /.content -->
  
   
      <%-  include("partials/footer-datatable")  %>