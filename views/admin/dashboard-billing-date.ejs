<%- include("partials/header") %>

<style>
.text-danger {
  color: red;
  -webkit-text-stroke: 0.02rem white;
  text-stroke: 1px white;
}

.text-suc {
  color: rgb(128, 87, 0);
  -webkit-text-stroke: 0.02rem white;
  text-stroke: 1px white;
}
</style>

  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns/dist/chartjs-adapter-date-fns.bundle.min.js"></script>

  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0"><b>Dashboard de faturação do dia <%= date %></b></h1> 
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- Small boxes (Stat box) -->
      <div class="row">
        <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-info">
            <div class="inner">
              <h3>
                <%= Number(expected_billing).toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %>€
              </h3>

              <p>Faturação Prevista</p>
            </div>
            <div class="icon">
              <i class="ion ion-stats-bars"></i>
            </div>
            <a href="/admin/event-list" class="small-box-footer">Mais Informações <i
                class="fas fa-arrow-circle-right"></i></a>
          </div>
        </div>

        <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-info">
            <div class="inner">
              <h3>
                <%= Number(effective_billing).toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %>€
              </h3>

              <h5>Faturação Realizada</h5>
            </div>
            <div class="icon">
              <i class="ion ion-stats-bars"></i>
            </div>
            <a href="/admin/client-list" class="small-box-footer">Mais Informações <i
                class="fas fa-arrow-circle-right"></i></a>
          </div>
        </div>

        <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-info">
            <div class="inner">
              <h3>
                <%= Number(daily_lost).toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %>€ <b>(<%= (percent_daily_lost).toFixed(2) %>%)</b> 
              </h3>

              <p>Quebras</p>
            </div>
            <div class="icon">
              <i class="ion ion-stats-bars"></i>
            </div>
            <a href="/admin/user-list" class="small-box-footer">Mais Informações <i
                class="fas fa-arrow-circle-right"></i></a>
          </div>
        </div>

        <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-info">
            <div class="inner">
              <h3>
                <%= Number(credit_note).toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %>€  <b class="<% if (percent_credit_note > 1) { %>text-danger<% } else { %>text-suc<% } %>">(<%= (percent_credit_note).toFixed(2) %>%)</b> 
              </h3>
              <p>Notas de Crédito</p>
            </div>
            <div class="icon">
              <i class="ion ion-stats-bars"></i>
            </div>
            <a href="/admin/list-product" class="small-box-footer">Mais Informações <i
                class="fas fa-arrow-circle-right"></i></a>
          </div>
        </div>
      </div>
      <!-- /.row -->
      <div class="row">
        <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-info">
            <div class="inner">
              <h3>
                <%= ocorrencias %>
              </h3>

              <p>Encomendas</p>
            </div>
            <div class="icon">
              <i class="ion ion-stats-bars"></i>
            </div>
            <a href="/admin/list-event" class="small-box-footer">Mais Informações <i
                class="fas fa-arrow-circle-right"></i></a>
          </div>
        </div>
        <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-info">
            <div class="inner">
              <h3>
                <%= ocorrencias %>
              </h3>

              <p>Ocorrências</p>
            </div>
            <div class="icon">
              <i class="ion ion-stats-bars"></i>
            </div>
            <a href="/admin/list-event" class="small-box-footer">Mais Informações <i
                class="fas fa-arrow-circle-right"></i></a>
          </div>
        </div>
        <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-info">
            <div class="inner">
              <h3>
                <%= ocorrencias %>
              </h3>

              <p>Reposições</p>
            </div>
            <div class="icon">
              <i class="ion ion-stats-bars"></i>
            </div>
            <a href="/admin/list-event" class="small-box-footer">Mais Informações <i
                class="fas fa-arrow-circle-right"></i></a>
          </div>
        </div>
        
      </div>







    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->


  <%- include("partials/footer") %>