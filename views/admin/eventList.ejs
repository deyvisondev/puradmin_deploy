
    <%-  include("partials/header-datatable")  %>
    
    <style>

    </style>
  
      <!-- Content Header (Page header) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">Lista de Ocorrências</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active">Lista de Ocorrências</li>
              </ol>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->
  
      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <!-- Small boxes (Stat box) -->
          <div class="row">
            <div class="col-md-12">
            <div class="card card-dark">
              <div class="card-header">
                <h3 class="card-title">Lista de Ocorrências</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                  <table id="tbl-list-events" class="table table-bordered table-striped">
                      <thead>
                      <tr>
                        <th>Data</th>
                        <th>Cliente</th>
                        <th>Produto</th>
                        <th>Motivo</th>
                        <th>Observação</th>
                        <th>Reposição</th>
                        <th>Departamento</th>
                        <th>Responsável</th>
                        <th>Acões</tr>
                      </tr>
                      </thead>
                      <tbody>
                            <% events.forEach(function(event){ %>
                          <tr>
                            <td>
                              <%= moment(event.date).format("DD/MM/YYYY")  %>
                          </td>
                            <td>
                                <%= event.client.name  %>
                            </td>
                            <td>
                                <%= event.Product.name  %>
                              </td>
                            
                             <td>
                                <%= event.event_issue.name  %>
                            </td>
                             <td>
                                <%= event.observation  %>
                            </td>
                            <td>
                                <% if(event.reposition == '0'){ %>
                                    <button class="btn btn-success">Não</button>
                                  <% }else{ %>
                                    <button class="btn btn-danger">Sim</button>
                                  <% } %>
                              </td>
                              <td>
                                <%= event.section.name  %>
                              </td>
                            
                             <td>
                                <%= event.user.name  %>
                            </td>
                            <td>
                              <a href="/admin/event-edit/<%= event.id %>" class="btn btn-info"><i class="fa fa-edit"></i>Editar</a>
                              
                              <form method="post" action="/admin/event-delete/" id="frm-delete-book-<%= event.id %>" style="display: inline;">
                                <input type="hidden" value="<%= event.id %>" name="event_id">
                              </form>
                              <a href="javascript:void(0)" onclick="if( confirm('Are you sure?')){ $('#frm-delete-book-<%= event.id %>').submit() }" class="btn btn-danger"><i class="fa fa-trash"></i>Deletar</a>
                            </td>
                          </tr>
                         <% }) %>
                      </tbody>
                      <tfoot>
                          <tr>
                            <th>Data</th>
                            <th>Cliente</th>
                            <th>Produto</th>
                            <th>Motivo</th>
                            <th>Observação</th>
                            <th>Reposição</th>
                            <th>Departamento</th>
                            <th>Responsável</th>
                            <th>Acões</tr>
                            </tr>
                      </tfoot>
                    </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>
          </div>
          <!-- /.row -->
        </div><!-- /.container-fluid -->
      </section>
      <!-- /.content -->
  
   
      <%-  include("partials/footer-datatable")  %>